<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.orensharon.brainq.presentation.TimeScale"/>
        <variable
            name="viewModel"
            type="com.orensharon.brainq.presentation.vm.VisualizationVM" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="send valid"
                android:onClick="@{() -> viewModel.onValidClicked()}"
                android:id="@+id/sendValidButton"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="send invalid"
                android:onClick="@{() -> viewModel.onInvalidClicked()}"
                android:id="@+id/sendInvalidButton"/>
        </LinearLayout>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/group"
            android:orientation="horizontal"
            android:gravity="center"
            app:timeScale="@{viewModel.getTimeScale()}">
            <RadioButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/hour"
                app:onChecked="@{() -> viewModel.changeTimeScale(TimeScale.HOURLY)}"
                android:text="Hour"/>

            <RadioButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/day"
                app:onChecked="@{() -> viewModel.changeTimeScale(TimeScale.DAILY)}"
                android:text="Day"/>

            <RadioButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/week"
                app:onChecked="@{() -> viewModel.changeTimeScale(TimeScale.WEEKLY)}"
                android:text="Week"/>
        </RadioGroup>
        <com.orensharon.brainq.presentation.view.RatioTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="16dp"
            app:ratio="@{viewModel.getRatio()}"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/graphContainer"/>
    </LinearLayout>
</layout>